{
  "manifest_version": 3,
  "name": "Run!!!",
  "version": "1.0.2",
  "description": "Blocks listed sites by redirecting to a full-screen image.",
  "action": {
    "default_title": "Site Blocker"
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "block.html",
        "block.js",
        "styles.css",
        "images/*",
        "options.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "runawaychicken@run.com",
      "strict_min_version": "100.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}